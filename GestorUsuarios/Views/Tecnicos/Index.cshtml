@model IEnumerable<GestorUsuarios.Models.Tecnico>

@{
    ViewBag.Title = "Lista de Técnicos";
}

<h2>Técnicos</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Agregar Técnico</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Especialidad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tecnico in Model)
        {
            <tr>
                <td>@tecnico.Nombre</td>
                <td>@tecnico.Especialidad</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = tecnico.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", new { id = tecnico.Id })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
