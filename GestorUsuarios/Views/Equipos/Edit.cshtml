@model GestorUsuarios.Models.Equipo

@{
    ViewBag.Title = "Editar Equipo";
}

<h2>Editar Equipo</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Tipo)
        @Html.TextBoxFor(m => m.Tipo, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Modelo)
        @Html.TextBoxFor(m => m.Modelo, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Usuario")
        @Html.DropDownListFor(m => m.UsuarioId, new SelectList(ViewBag.Usuarios, "Id", "Nombre", Model.UsuarioId), "Seleccione un usuario", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
}
