@model GestorUsuarios.Models.Equipo

@{
    ViewBag.Title = "Eliminar Equipo";
}

<h2>Eliminar Equipo</h2>

<p>¿Estás seguro de que deseas eliminar este equipo?</p>

<dl class="dl-horizontal">
    <dt>Tipo:</dt>
    <dd>@Model.Tipo</dd>
    <dt>Modelo:</dt>
    <dd>@Model.Modelo</dd>
</dl>

@using (Html.BeginForm("DeleteConfirmed", "Equipos", new { id = Model.Id }, FormMethod.Post))
{
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
}
