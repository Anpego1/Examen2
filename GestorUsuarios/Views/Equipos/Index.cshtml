@model IEnumerable<GestorUsuarios.Models.Equipo>

@{
    ViewBag.Title = "Lista de Equipos";
}

<h2>Equipos</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Agregar Equipo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Modelo</th>
            <th>Usuario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var equipo in Model)
        {
            <tr>
                <td>@equipo.Tipo</td>
                <td>@equipo.Modelo</td>
                <td>@equipo.Usuario?.Nombre</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = equipo.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", new { id = equipo.Id })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
